<Request>
   <Login>
        <Username>{{username}}</Username>
        <Password >{{password}}</Password>
    </Login>
    <Set operation="update"> 
    <IPHostGroup transactionid="">
        <Name>{{ name }}</Name>
        <Description>{{ description if description else '' }}</Description>
        <HostList>
            {% for host in host_list %}
            <Host>{{ host }}</Host>
            {% endfor %}
        </HostList>
        <IPFamily>IPv4</IPFamily>
    </IPHostGroup>
   </Set>
</Request>