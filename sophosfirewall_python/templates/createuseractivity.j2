<Request>
    <Login>
        <Username>{{username}}</Username>
        <Password>{{password}}</Password>
    </Login>
    <Set operation="add">
    <UserActivity>
		<Name>{{ name }}</Name>
		<Desc>{{ description }}</Desc>
        {% if category_list %}
		<CategoryList>
        {% for category in category_list %}
			<Category>
				<type>{{ category.type }}</type>
				<ID>{{ category.id }}</ID>
			</Category>
			{% endfor %}
		</CategoryList>
        {% endif %}
	</UserActivity>
  </Set>
</Request>
